# copy new version of code
git ls-files | tar -zc -T - -f -  | ssh -i $DEPLOY_KEY_PATH $DEPLOY_USER@$DEPLOY_INSTANCE <<EOF
rm -rf ~/code;
mkdir ~/code;
cd ~/code;
tar -xzf -
EOF

ssh -i $DEPLOY_KEY_PATH $DEPLOY_USER@$DEPLOY_INSTANCE <<EOF
cd ~/code;
sudo docker-compose -f docker-compose.prod.yaml build &&
nohup sudo docker-compose -f docker-compose.prod.yaml up -d 2>&1 log.log &
EOF
